---
import type { Event } from '../pages/index.astro';
import { formatDate, slugify } from '../utils/helpers';

interface Props {
  event: Event;
}

const { event } = Astro.props;
const eventUrl = `/events/${event.id}/${slugify(event.title)}`;

const colors = [
  'bg-pink-100',
  'bg-indigo-100',
  'bg-emerald-100',
  'bg-amber-100',
  'bg-rose-100',
];
const colorClass = colors[event.id % colors.length];
---

<a href={eventUrl} class="group block bg-white rounded-lg border border-slate-200 hover:border-slate-300 hover:shadow-md transition-all">
  <div class="p-4">
    <div class="flex gap-3">
      <div class={`flex-shrink-0 w-12 h-12 rounded-lg ${colorClass} flex items-center justify-center`}>
        <span class="text-sm font-bold text-slate-700">
          {event.title.split(' ').slice(0,2).map(w => w[0]).join('').toUpperCase()}
        </span>
      </div>

      <div class="flex-1 min-w-0">
        <h3 class="font-semibold text-slate-900 group-hover:text-blue-600 transition-colors line-clamp-2">
          {event.title}
        </h3>
        <p class="text-sm text-slate-600 mt-1">
          {event.organizer || 'Community Event'}
        </p>
      </div>
    </div>

    <p class="mt-3 text-sm text-slate-700 line-clamp-2">
      {event.description}
    </p>

    <div class="mt-4 flex items-center justify-between text-sm">
      <div class="flex items-center gap-2 text-slate-600">
        <span>{event.cityName}</span>
        {event.districtName && (
          <>
            <span class="text-slate-300">â€¢</span>
            <span>{event.districtName}</span>
          </>
        )}
      </div>
      <time datetime={new Date(event.eventDate).toISOString()} class="text-slate-500">
        {formatDate(event.eventDate)}
      </time>
    </div>
  </div>
</a>